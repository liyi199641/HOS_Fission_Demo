{
  "module": {
    "name": "entry",
    "type": "entry",
    "srcEntry": "./ets/myabilitystage/MyAbilityStage.ets",
    "description": "$string:module_desc",
    "mainElement": "EntryAbility",
    "deviceTypes": [
      "phone",
      "tablet",
      "2in1"
    ],
    "deliveryWithInstall": true,
    "installationFree": false,
    "pages": "$profile:main_pages",
    "routerMap": "$profile:router_config",
    "requestPermissions": [
      {
        "name": "ohos.permission.INTERNET",
        //        "reason": "$string:permission_reason_internet",
        //        "usedScene": {
        //          "abilities": []
        //        }
      },
      {
        "name": "ohos.permission.MICROPHONE",
        "reason": "$string:permission_reason_microphone",
        "usedScene": {
          "abilities": [],
          "when": "always"
          //inuse:使用时 always:始终（当申请的权限为user_grant权限时建议填写。）
        }
      },
      {
        "name": "ohos.permission.APPROXIMATELY_LOCATION",
        "reason": "$string:permission_reason_location",
        "usedScene": {
          "abilities": [],
          "when": "always"
          //inuse:使用时 always:始终（当申请的权限为user_grant权限时建议填写。）
        }
      },
      {
        "name": "ohos.permission.ACCESS_BLUETOOTH",
        "reason": "$string:permission_reason_read_access_bluetooth",
        "usedScene": {
          "abilities": [],
          "when": "always"//inuse:使用时 always:始终（当申请的权限为user_grant权限时建议填写。）
        }
      },
      {
        "name": "ohos.permission.KEEP_BACKGROUND_RUNNING",
        "reason": "$string:permission_reason_keep_background_running",
        "usedScene": {
          "abilities": [],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.CAMERA",
        "reason": "$string:permission_reason_read_access_camera",
        "usedScene": {
          "abilities": [],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.LOCATION",
        "reason": "$string:permission_reason_read_location",
        "usedScene": {
          "abilities": [],
          "when": "always"
        }
      }
    ],
    "abilities": [
      {
        "backgroundModes": [
          'location',
          'taskKeeping',
          'bluetoothInteraction',
          'multiDeviceConnection'
        ],

        "name": "EntryAbility",
        "srcEntry": "./ets/entryability/EntryAbility.ets",
        "description": "$string:EntryAbility_desc",
        "icon": "$media:layered_image",
        //设置/最近任务 icon
        "label": "$string:EntryAbility_label",
        "startWindowIcon": "$media:logo",
        "startWindowBackground": "$color:start_window_background",
        "exported": true,
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ]
          }
        ]
      },
      {
        "name": "MySecondAbility",
        "srcEntry": "./ets/mysecondability/MySecondAbility.ets",
        "description": "$string:MySecondAbility_desc",
        "icon": "$media:layered_image",
        "label": "$string:MySecondAbility_label",
        "startWindowIcon": "$media:startIcon",
        "startWindowBackground": "$color:start_window_background"
      }
    ],
    "extensionAbilities": [
      {
        "name": "EntryBackupAbility",
        "srcEntry": "./ets/entrybackupability/EntryBackupAbility.ets",
        "type": "backup",
        "exported": false,
        "metadata": [
          {
            "name": "ohos.extension.backup",
            "resource": "$profile:backup_config"
          }
        ]
      }
    ]
  }
}